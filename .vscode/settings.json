{
  "editor.formatOnSave": true,
  "[zig]": {
    "editor.defaultFormatter": "ziglang.vscode-zig",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "zig.buildOnSave": false,
  "zig.path": "zig",
  "zig.zls.path": "zls",
  "files.associations": {
    "*.zig": "zig"
  },
  "files.exclude": {
    "**/.zig-cache": true,
    "**/zig-out": true
  }
}
